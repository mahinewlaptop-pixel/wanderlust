<% layout("/listings/boilerplate")%>
<body>
    <!-- <h3><%= //success %></h3> -->
    <h3>All Listings</h3>
    <!-- <form method="GET" action="/listing/new">
        <button>Create new listing</button>
    </form> -->
    
   <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-2 card-listing">
     <%for(let listing of allListing){%>
      
        <div class="card card-listing" style="width: 20rem;">
            <a href="/listing/<%= listing._id %>"> 
            <img src=<%= listing.image.url %> class="card-img" alt="Property Image" style="height: 20rem;">
            <div class="card-img-overlay"><%= listing.location %></div>
            <div class="card-body">
                <p class="card-text"><b><%= listing.title %></b><br>
                &#8377; <%= listing.price %>/Night</p>
            </div>
            </a> 
        </div>
    
    <%}%> 
   </div>     
</body>
